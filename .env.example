# ================================
# N8N RAILWAY CONFIGURATION
# ================================

# Autenticação Básica
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=SuaSenhaForte123

# Configuração do Host (Railway fornece automaticamente)
N8N_HOST=${{RAILWAY_STATIC_URL}}
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://${{RAILWAY_STATIC_URL}}/

# Database PostgreSQL (Railway fornece automaticamente)
DATABASE_URL=${{DATABASE_URL}}
DB_TYPE=postgresdb

# Timezone
GENERIC_TIMEZONE=America/Sao_Paulo
TZ=America/Sao_Paulo

# Segurança SSL
N8N_SECURE_COOKIE=true
N8N_FORCE_SSL=true

# Configurações adicionais
N8N_METRICS=true
N8N_DIAGNOSTICS_ENABLED=false
N8N_DEFAULT_BINARY_DATA_MODE=filesystem
N8N_BINARY_DATA_TTL=24
N8N_EXECUTE_IN_PROCESS=false

# Log Level (opcional)
N8N_LOG_LEVEL=info 
