# ================================
# N8N RAILWAY CONFIGURATION
# ================================

# ✅ VARIÁVEIS OBRIGATÓRIAS
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=SuaSenhaForte123

# Host (Railway fornece automaticamente)
N8N_HOST=${{RAILWAY_PUBLIC_DOMAIN}}
N8N_PROTOCOL=https
WEBHOOK_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}/

# Database - APENAS estas duas!
DATABASE_URL=${{Postgres.DATABASE_URL}}
DB_TYPE=postgresdb

# CRÍTICO - previne problemas de conexão
N8N_CONFIG_FILES=""

# Timezone
TZ=America/Sao_Paulo

# ✅ VARIÁVEIS OPCIONAIS
N8N_SECURE_COOKIE=true
N8N_FORCE_SSL=true
N8N_METRICS=true
N8N_DIAGNOSTICS_ENABLED=false
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_LOG_LEVEL=info

# ❌ NUNCA ADICIONE ESTAS VARIÁVEIS:
# DB_POSTGRESDB_HOST, DB_POSTGRESDB_PORT, DB_POSTGRESDB_USER
# PGHOST, PGPORT, PGUSER, PGPASSWORD
